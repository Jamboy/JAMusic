.container {
  display: flex;
  width: 100%;
  padding-bottom: 10rpx;
  align-items: center;
}

.left {
  flex: 0 0 15%;
  position: relative;
}

.img {
  width: 100%;
}

.right {
  display: flex;
  flex-direction: column;
  flex: 1;
  padding-left: 20rpx;
}

.name {
  font-size: 24rpx;
  font-weight: bold;
  padding-bottom: 10rpx;
}

.artist-name {
  font-size: 22rpx;
  color: #999;
}
